{
  "private": true,
  "devDependencies": {
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1"
  },
  "dependencies": {
    "babel-core": "^6.18.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "es6-promise": "^4.0.5",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-csslint": "^1.0.0",
    "gulp-each": "^0.2.0",
    "gulp-eslint": "^3.0.1",
    "gulp-footer": "^1.0.5",
    "gulp-header": "^1.8.8",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-include": "^2.3.1",
    "gulp-load-plugins": "^1.4.0",
    "gulp-newer": "^1.3.0",
    "gulp-notify": "^2.2.0",
    "gulp-postcss": "^6.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^3.0.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^1.9.1",
    "gulp-uglify": "^2.0.0",
    "merge-stream": "^1.0.1",
    "minimist": "^1.2.0",
    "node-notifier": "^4.6.1",
    "node-sass": "^4.5.3",
    "postcss": "^5.2.8",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-import-url": "^2.2.0",
    "stylelint": "^7.7.0",
    "stylelint-config-standard": "^15.0.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "ignore": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "extends": "standard",
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true
    },
    "plugins": [
      "standard",
      "promise"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions"
  },
  "resolutions": {
    "graceful-fs": "4.2.3"
  }
}
